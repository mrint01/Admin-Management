{%  extends 'profiluserbase.html.twig' %}
{% block body %}


<section id="main">
  <div class="container">
    <div class="row">
      <div  class="col-md-9">
      <ol class="breadcrumb">
        <li class="active">Profil</li>
      </ol>

    <!--Latest User-->
    <div class="panel panel-default">
    <nav class="navbar navbar-inverse">
    <div class="container-fluid">

    <ul class="nav navbar-nav">
      <li class="active"><a href="{{ path('profil_user') }}">Info</a></li>
      <li><a href="{{ path('pass') }}">Sécurité</a></li>

    </ul>
    </div>
    </nav>


    <div class="panel-body">
 <center>
      <div class="row">
          <h1 class="text-primary text-center">Info</h1>
              <div style="margin-left: -2%;width: 102%;padding-right: 5px;" class="col-sm-6 col-sm-offset-3">


                  <table  class="table table-striped">

                        <tbody>
                        {% for user in users %}
                        <tr>
                            <th>Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th>Prénom</th>
                            <td>{{ user.name }}</td>
                        </tr>
                        <tr>
                            <th>Nom </th>
                            <td>{{ user.lastname }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ user.email }}</td>
                        </tr>

                        <tr>
                            <th>Activité</th>
                            <td>{{ user.activite }}</td>
                        </tr>



                        </tbody>
                    </table>
                    <a style="padding:4px 5px;" href="{{ path('edit_us', { 'id': user.id }) }}" class="btn btn-primary a-btn-slide-text"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span><span><strong> Modifier</strong></span>  </a>
    {% endfor %}


      </div>

    </div>
    </center>
    </div>
    </div>

      </div>
    </div>
  </div>
</section>


  <footer id="footer" style="margin-top: 186px;  padding: 6px;">
    <p>Copyright ©2019</p>
  </footer>

