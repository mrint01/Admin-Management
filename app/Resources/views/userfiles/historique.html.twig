{%  extends 'profiluserbase.html.twig' %}
{% block body %}


<section id="main">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <ol class="breadcrumb">
          <li class="active">historique</li>
        </ol>
        <div class="panel panel-default">



<div style="margin-right: 1px;margin-left: 0px;" class="row">
  <br/><br/>
  <div style="margin-top:-34px;margin-left:56px;width:200px;"class="input-group">
  <input  type="text" placeholder="chercher" name="search" id="search" class="form-control">
  <span class="input-group-btn">
    <button  type="submit" class="btn btn-default" data-original-title="" title=""><i class="glyphicon glyphicon-search"></i></button>
  </span>
  </div>
  <br/>
  <table  class="table table-striped" id="employee_table">
          <thead class="thead-dark">
            <tr>
               <th>Id</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Nombre de fichier traité</th>

            </tr>
        </thead>
        <tbody>

        {% for date in dates %}
              <tr>
                <td><font color="#428bca">{{ date.id }}</font></td>
                <td>{{ date.dateDebut }}</td>
                <td>{{ date.dateFin }}</td>
                <td>{{date.nbrFichierTraite }}</td>




            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>

    </div>
<!--Latest User-->
      </div>
    </div>
  </div>
</section>


  <footer id="footer" style="margin-top: 186px;  padding: 6px;">
    <p>Copyright ©2019</p>
  </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <script src="dist/js/bootstrap.min.js"></script>
    <script>
      $(document).ready(function(){
           $('#search').keyup(function(){
                search_table($(this).val());
           });
           function search_table(value){
                $('#employee_table tr').each(function(){
                     var found = 'false';
                     $(this).each(function(){
                          if($(this).text().toLowerCase().indexOf(value.toLowerCase()) >= 0)
                          {
                               found = 'true';
                          }
                     });
                     if(found == 'true')
                     {
                          $(this).show();
                     }
                     else
                     {
                          $(this).hide();
                     }
                });
           }
      });
 </script>
	{%  endblock %}
